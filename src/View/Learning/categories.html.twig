{% extends 'layout-3cols.html.twig' %}
{% block asidebarLeft %}
    {% include 'components/_asideBarLeft.html.twig'%}
{% endblock %}
    {% block content %}
        {% for learnings in learning %}
            <div class="d-flex flex-column align-items-center ">
                <div class="card border-0 m-2 p-12 shadow p-0 m-0 bg-white rounded " style="width: 100%;">
                    <div class="accordion d-flex col-12" id="{{ learnings.id }}">
                        <div class="accordion-item" style="width: 100%;">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button bg-light m-0" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne-a-{{ learnings.id }}" aria-expanded="true" aria-controls="collapse">
                                    <img src="{{ learnings.img_url }}" class="img-fluid float-left me-4" style="height: 4rem; width: 4rem;">
                                    <p class="blockquote me-2 col-3 h2 text-secondary"> {{ learnings.title }}</p>
                                    <cite title="Source Title" class="text-dark "> {{ learnings.description }} </cite>
                                </button>
                            </h2>
                        </div>
                    </div>
                    {% for content in learnings.content %}
                        <div id="collapseOne-a-{{ content.elearning_id }}" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordion">
                            <div class="accordion-body">
                                <ul class="list-group">
                                    <div class="col-12">
                                        <li class="card list-group-item">
                                            <img src="{{ content.img_url }}" alt="#" class="card-image-overlay" style="max-height: 2rem; max-width: 2rem;">
                                                <p class="h5 d-flex col-8 mt-2">{{ content.title }} </p>
                                                <div class="col-12 d-flex justify-content-center">
                                                    <p class="font-weight-bold">{{ content.body }}</p>
                                                </div>
                                                <div class="d-flex justify-content-end">
                                                    <a href="learning/update?id={{ content.id }}" class="btn btn-primary d-flex justify-content-center align-items-center p-0 m-1" style="width: 8rem; height: 2rem">Update</a>
                                                    <a href="learning/delete?id={{ content.id }}" class="btn btn-primary d-flex justify-content-center align-items-center p-0 m-1" style="width: 8rem; height: 2rem">Delete</a>
                                                    <a href="learning/training?id={{ content.id }}" class="btn btn-primary d-flex justify-content-center align-items-center p-0 m-1" style="width: 8rem; height: 2rem">Display</a>
                                            </div>
                                        </li>
                                    </div>
                                </ul>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        <a href="learning/add" class="btn btn-primary d-flex justify-content-center align-items-center p-0 m-1">Create Content</a>
    {% endblock %}
