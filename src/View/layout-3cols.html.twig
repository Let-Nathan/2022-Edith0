{% extends 'base.html.twig' %}

{% block layout %}

    <div class="container-fluid">

        <div class="row">
            <div class="col bg-danger">
                {% block header %}{% endblock %}
            </div>
        </div>

        <div class="row">
            <div class="col col-2">
                {% block asidebarLeft %}{% endblock %}
            </div>

            <div class="col" style="background-color: #eee">
                {% block content %}{% endblock %}
            </div>

            <div class="col col-3">
                {% block sidebarRight %}{% endblock %}
            </div>
        </div>

    </div>
{% endblock %}
