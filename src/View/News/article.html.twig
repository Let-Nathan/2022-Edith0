{% extends 'layout-2cols.html.twig' %}

{% block content %}
        <div class="card m-3">
            <div class="card-body ">
                    <h1 class="card-title d-flex text-center">{{news['title']}}</h1>
                    <img src="{{news['media_url'] }}" class="card-img-top article-img-card" alt="content image article">
                <p class="card-text mt-3 d-flex text-justify">{{news['body']}}</p>
                <div class="d-flex ms-2">
                    <p>{{news['create_at']}}</p>
                </div>
                    <div class="card-footer d-flex justify-content-between bg-white border-0">
                        <button class="btn btn-primary d-flex align-text-top" type="button" data-bs-toggle="collapse"><ion-icon name="arrow-back-outline"></ion-icon> Retour au news</button>
                    </div>
                </div>
        </div>
{%endblock %}
