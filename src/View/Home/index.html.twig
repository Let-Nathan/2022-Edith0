{% extends 'layout.html.twig' %}

{% block content %}

    {% for post in posts %}

        <div class="d-flex justify-content-center mb-3">
            <div class="card border-0" style="width: 40rem;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <img class="rounded" style="height: 55px; width: 55px; object-fit: cover" src="{{ post['user']['image_url'] }}">
                        <div class="d-flex flex-column justify-content-between m-2">
                            <h5 class="card-title">{{ post['user']['firstname'] ~ ' ' ~ post['user']['lastname'] }}</h5>
                            <p class="m-0">{{ post['user']['position'] }}</p>
                        </div>
                    </div>

                    <div >
                        <span class="text-white bg-primary p-2 rounded me-2">
                            {# TODO: count likes and comments #}
                            comments <span class="badge bg-secondary">{{ post['comments']|length }}</span>
                        </span>

                        <span class="text-white bg-primary p-2 ps-3 pe-3 rounded me-2 position-relative">
                            <ion-icon name="heart"></ion-icon>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">{{ post['nLikes'] }}</span>
                        </span>
                    </div>
                </div>

                {% if post['media_url'] is defined %}
                    <img src="{{  post['media_url'] }}" class="card-img-top" alt="...">
                {% endif %}

                <span class="text-muted ms-3">last update: {{ post['last_update_datetime'] }}</span>

                <ul class="list-inline m-0 mt-3 ms-3">
                    {% for document in post['documents'] %}
                        <li class="list-inline-item"><a href="{{ document['url'] }}" target="_blank"><ion-icon name="document-text-outline"></ion-icon></a></li>
                    {% endfor %}
                </ul>

                <div class="card-body">
                    <p class="card-text">{{ post['body'] }}</p>
                </div>

                <span class="align-self-center pb-3 text-info" role="button" data-post-id="{{ post['id']}} ">show comments ({{ post['comments']|length }})</span>

                {# TODO: loop on all comments with class hidden toggle by JS #}
                <div class="card" style="width: 30rem;">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock %}
